<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/teal_700"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên dịch vụ"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:startIconDrawable="@drawable/baseline_edit_note_24"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_update_chi_tiet_dich_vu_tenDV"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:editable="false"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số lượng"
        app:errorTextAppearance="@style/ErrorTextAppearance"

        android:layout_marginTop="20dp"
        app:startIconDrawable="@drawable/baseline_add_24"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_update_chi_tiet_dich_vu_soLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá tiền"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:startIconDrawable="@drawable/baseline_attach_money_24"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_update_chi_tiet_dich_vu_giaTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType="number"
            android:layout_margin="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_update_chi_tiet_dich_vu_xoa"
            android:text="Xóa"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_update_chi_tiet_dich_vu_sua"
            android:text="Sửa"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>


</LinearLayout>