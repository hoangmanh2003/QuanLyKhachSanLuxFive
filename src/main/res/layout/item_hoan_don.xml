<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
   android:layout_marginStart="5dp"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/cardview_shadow_start_color">

        <ImageView
            android:src="@drawable/item_hoadon"
            android:layout_width="60dp"
            android:padding="10dp"
            android:layout_height="95dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_hoaDon_tvNamePhong"
                android:text="1"
                android:textSize="20dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/kieuchu"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_hoaDon_tvNgayThang"
                android:text="1"
                android:textSize="20dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/kieuchu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_hoaDon_tvTongTien"
                android:text="1"
                android:textSize="20dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/kieuchu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/item_hoaDon_btn_chitiet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Widget.MaterialComponents.MaterialCalendar"
                android:text="Chi tiáº¿t"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"
                android:textSize="20dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>