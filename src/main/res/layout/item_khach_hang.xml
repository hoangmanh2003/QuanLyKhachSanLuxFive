<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_khach_hang_avata"
                android:src="@drawable/avata_khach_hang"
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_khach_hang_tv_ten"
                    android:layout_marginTop="15dp"
                    android:text="1"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_khach_hang_tv_sdt"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_khach_hang_tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sá»­a"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="#E41010"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>